<script>
<name>plugin.casino.getcardcolour</name>
<version>1</version>
<engineversion>60</engineversion>
<description>Casino Scripts: Get the sui colour</description>
<arguments>
<argument index="1" name="a.card" type="Var/Number" desc="Card" />
</arguments>
<sourceplaintext>
<![CDATA[
  $suit = ( $a.card - 1 ) / 13
  if $suit == 0 OR $suit == 2
    return [MenuColour.Magenta]
  else if $suit == 1 OR $suit == 3
    return [MenuColour.Black]
  end
  return [MenuColour.Grey]
]]>
</sourceplaintext>
