<?xml version="1.0"?>
<cutscene xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cutscene.xsd">

  <director key="Stage2_BeryllEncounter"/>
  <environments>
    <environment_implicit name="mainsector" sector="@playersector"/>
  </environments>
  <client menus="close" showmonitor="true">
    <input lock="all"/>
  </client>
  <presentation>
    <actions>
      <sequence name="MissionIntroCD" start="100">
        <shot name="shot1" environment="mainsector" duration="10000">
          <camera_flyfromto reference="@playership" flyto_reference="BeryllLeader" distance="200" flyto_distance="600" time_firstobject="500" time_fly="4000" interpolation="smooth" orient_to="object" overlay_tile="0"/>
        </shot>
      </sequence>
    </actions>
  </presentation>
</cutscene>