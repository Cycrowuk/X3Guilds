<?xml version="1.0"?>
<cutscene xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cutscene.xsd">
  <director key="Reunion_Goner_Flyby"/>
  <environments>
    <environment_implicit name="mainsector" sector="@playersector"/>
  </environments>
  <client menus="open">
    <input lock="all"/>
  </client>
  <presentation>
    <actions>
      <sequence name="MissionIntro" start="50">	  
        <shot name="flybyshot" environment="mainsector" duration="10000">
          <camera_flyby reference="CutsceneShip" distance="200" elevation="30" offset="100" shaking="3" time="10000" interpolation="smooth" orient_to="object"/>
        </shot>
      </sequence>
    </actions>
  </presentation>
</cutscene>